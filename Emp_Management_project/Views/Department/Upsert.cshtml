@model Emp_Management_project.Models.DTOs.DepartmentDto

@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Department" : "New Department";
}

<form method="post" id="employeeForm" style="margin-left:3.4cm">
    <div class="row">
        <div class="col-10 border-bottom">
            <h2 class="text-primary"><b>@title</b> </h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>

    <div class="col-8">
        <input type="hidden" asp-for="Id" />

        <div class="form-group row p-2 m-2">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" id="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row p-2 m-2">
            <div class="form-group row p-2 m-2">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackListButtons" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButtons" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Department.js"></script>
}
